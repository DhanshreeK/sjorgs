<div class="px-content">
    <div class="page-header">
      <h1><span class="text-muted font-weight-light"><i class="page-header-icon ion-ios-keypad"></i>
    </div>

    <div class="panel">
      <div class="panel-heading">
        <div class="panel-title">Members</div>
      </div>
        <h4>Import Products</h4>
        <%= form_tag import_customers_path, multipart: true do %>
          <%= file_field_tag :file,class: 'form-control' %>
          <%= submit_tag "Import", class: 'btn btn-info' %>
        <% end %>

            <div class="panel-body">

     <%= link_to 'New Member', new_customer_path , class: 'btn btn-primary'%>

      <br><br>
        <div class="table-primary">
          <table class="table table-striped">
            <thead>
             <tr class="gradeA">
              <th>Membership Number</th>
                <th>Name</th>
                <th>State</th>
                <th>Contact number</th>
                <th>Email</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>

              <tbody>
                <% @customers.each do |customer| %>
                  <tr>
                    <td><%= customer.membership_number %></td>
                    <td><%= customer.name %></td>
                    <td><%= customer.state %></td>
                    <td><%= customer.contact_number %></td>
                    <td><%= customer.email %></td>
                    <td><%= link_to 'Show', customer %></td>
                    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
                    <td><%= link_to 'Destroy', customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= will_paginate @customers, :container => false %>
<br>
<p>
  Download Report:
  <%= link_to "Excel File" , customers_url(format: "xls") %>
</p>

