  <div class="px-content">
    <div class="page-header">
      <h1><span class="text-muted font-weight-light"><i class="page-header-icon ion-ios-keypad"></i></h1>
    </div>

    <div class="panel">
      <div class="panel-heading">
        <div class="panel-title">Employees</div>
      </div>

      <div class="panel-body">
      <%= link_to 'New Employee', new_employee_path , class: 'btn btn-primary'%>
      <br> <br>
        <div class="table-primary">
          <table class="table table-striped table-bordered">
  <thead>
   <tr class="gradeA">
      <th>Name</th>
      <th>Email</th>
      <th>Contact number</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.email %></td>
        <td><%= employee.contact_number %></td>
        <td><%= employee.location %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @employees , :container => false%>
<br>
</div>
</div>
</div>
