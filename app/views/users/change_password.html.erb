<div class="px-content">
    <div class="page-header">
      <h1><span class="text-muted font-weight-light"><i class="page-header-icon ion-ios-keypad"></i></span></h1>
    </div>


      <div class="col-md-12">
        <div class="panel panel-danger panel-dark">
          <div class="panel-heading">
            <span class="panel-title">User Details</span>
            <div class="panel-heading-icon"><i class="fa fa-inbox"></i></div>
          </div>
          <div class="panel-body">

<div class="row">

  <div class="box col-md-6 col-md-offset-2">
  <div class="box-inner">
      <h2>Change Password</h2>
    </div>
<br>
    <div class="box-content">
    <fieldset>
    <%= form_for @user,url:{action: 'update_password',id: @user.id},method: :patch do |f| %>
    <%= change_password_user_url %>
   
<div class="row"> 
  <div class="col-sm-8 col-sm-offset-2">
  <div class="form-group">
    <b>New Password:</b>
     <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder:'New Password',class: "form-control",style: "width: 300px" %>
    </div>
    <div class="form-group">
      <b>Confirm New Password:</b> 
    <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:'Confirm New Password',class: "form-control",style: "width: 300px" %>
    </div>
  <br>
    <div class="form-group">
      <div align="center">
        <%= f.submit "Update",class: "btn btn-success" %>
      </div>
    </div>

  <% end  %>
 </div>
 </div>
 </fieldset>
 </div>
 </div>
 </div>
 